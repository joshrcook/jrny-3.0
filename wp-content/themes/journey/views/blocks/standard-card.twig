<div id="{{ block.id }}" class="jrny-standard-card">
    <div
        class="bg-cover bg-center overflow-hidden rounded-xl flex items-end font-sans jrny-card jrny-card--standard" 
        style="background-image: url({% if field.background_image %}{{ field.background_image.url }}{% else %}https://via.placeholder.com/500x500{% endif %});">
        <div class="w-full px-5 pb-6 pt-9 jrny-card__content-wrapper">
            <div class="flex items-end gap-4">
                <div class="flex-grow text-white">
                    <div class="h6 mb-0">{{ field.subtitle | default('Featured') }}</div>
                    <div class="h4 mt-1 mb-0">{{ field.title | default('Card Title') }}</div>
                </div>
                <div class="flex-shrink">
                    <a class="btn btn-light btn-sm whitespace-nowrap" href="{{ field.call_to_action.url }}" target="{{ field.call_to_action.target }}">{{ field.call_to_action.title | default('Call To Action') }}</a>
                </div>
            </div>
        </div>
    </div>
</div>